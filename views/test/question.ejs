<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<div class="container-fluid">
  <h1>Title: <%= testDetails.title %></h1>
  <h2>Add question</h2>
</div>

<div class="container-fluid">
  <form method="post" action="/tests/question/<%=testDetails._id%>" class="addQuestion">
    <div class="form-group">
      <label for="format">Question Format</label>
      <select class="form-control" id="format" name="question[format]">
        <option value="mcq-single-option">MCQ Single Option</option>
        <option value="true-false">True/False</option>
        <option value="open-ended">Open-ended</option>
      </select>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" rows="3" id="content" name="question[content]" maxlength="200" required></textarea>
    </div>
    <div class="form-group options">
      <label for="option1">Option 1 (Answer)</label>
      <input type="text" class="form-control" id="option1" name="question[option1]">
    </div>
    <div class="form-group options">
      <label for="option2">Option 2</label>
      <input type="text" class="form-control" id="option2" name="question[option2]">
    </div>
    <div class="form-group options">
      <label for="option3">Option 3</label>
      <input type="text" class="form-control" id="option3" name="question[option3]">
    </div>
    <div class="form-group options">
      <label for="option4">Option 4</label>
      <input type="text" class="form-control" id="option4" name="question[option4]">
    </div>
    <div class="form-group tfanswer hidden">
      <label for="answer">Answer</label>
      <select class="form-control" id="tfanswer" name="question[tfanswer]">
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>
    <div class="form-group oeanswer hidden">
      <label for="answer">Answer</label>
      <textarea class="form-control" rows="3" id="oeanswer" name="question[oeanswer]" maxlength="200"></textarea>
    </div>
    <button type="submit">Add</button>
  </form>
</div>
