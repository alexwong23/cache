<h1>Edit Test</h1>

<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<div class="container-fluid">
  <% var testDetailsJS = JSON.stringify(testDetails).replace(/\s/g, "_space_") %>
  <form method="post" action="/tests/edit/test/<%= testDetails._id %>" enctype="application/x-www-form-urlencoded"
  class="editTest"
  data-test=<%= testDetailsJS%>>
    <div class="form-group">
      <input type="hidden" name="_method" value="PUT">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="test[title]" value="<%= testDetails.title %>" required>
    </div>
    <div class="form-group">
      <label for="subject">Subject</label>
      <input type="text" class="form-control" id="subject" name="test[subject]" value="<%= testDetails.subject %>" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" rows="4" id="description" name="test[description]" maxlength="100"></textarea>
    </div>
    <button type="submit">Edit</button>
  </form>
</div>
