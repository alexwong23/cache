<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<div class="container-fluid">
  <h1>Title: <%= questionDetails.testid.title %></h1>
  <h2>Edit question</h2>
</div>

<div class="container-fluid">
  <% var questionDetailsJS = JSON.stringify(questionDetails).replace(/\s/g, "_space_") %>
  <form method="post" action="/tests/edit/question/<%= questionDetails._id %>" enctype="application/x-www-form-urlencoded"
  class="editQuestion submitQuestion"
  data-question=<%= questionDetailsJS%>>
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="format">Question Format</label>
      <select class="form-control" id="format" name="question[format]">
        <option value="mcq-single-option">MCQ Single Option</option>
        <option value="true-false">True/False</option>
        <option value="open-ended">Open-ended</option>
      </select>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" rows="3" id="content" name="question[content]" maxlength="200" required></textarea>
    </div>
    <div class="form-group options">
      <label for="option1">Option 1 (Answer)</label>
      <input type="text" class="form-control" id="option1" name="question[option1]" value="<%=questionDetails.option1%>">
    </div>
    <div class="form-group options">
      <label for="option2">Option 2</label>
      <input type="text" class="form-control" id="option2" name="question[option2]" value="<%=questionDetails.option2%>">
    </div>
    <div class="form-group options">
      <label for="option3">Option 3</label>
      <input type="text" class="form-control" id="option3" name="question[option3]" value="<%=questionDetails.option3%>">
    </div>
    <div class="form-group options">
      <label for="option4">Option 4</label>
      <input type="text" class="form-control" id="option4" name="question[option4]" value="<%=questionDetails.option4%>">
    </div>
    <div class="form-group tfanswer hidden">
      <label for="answer">Answer</label>
      <select class="form-control" id="tfanswer" name="question[tfanswer]">
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>
    <div class="form-group oeanswer hidden">
      <label for="answer">Answer</label>
      <textarea class="form-control" rows="3" id="oeanswer" name="question[oeanswer]" maxlength="200"></textarea>
    </div>
    <button type="submit">Add</button>
  </form>
</div>
