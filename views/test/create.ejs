<h1>Create Test</h1>

<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form method="post" action="/tests/create">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="test[title]" required>
  </div>
  <div class="form-group">
    <label for="subject">Subject</label>
    <input type="text" class="form-control" id="subject" name="test[subject]" required>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" rows="4" id="description" name="test[description]" maxlength="100"></textarea>
  </div>
  <div class="form-group">
    <label for="number_of_questions">No of Qns</label>
    <input type="number" class="form-control" id="number_of_questions" name="test[number_of_questions]" required>
  </div>
  <button type="submit">Create</button>
</form>
