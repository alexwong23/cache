<h1>LOGIN PAGE</h1>

<% if(message.length > 0) { %>
  <div>
    <%= message %>
  </div>
<% } %>

<form method="post" action="/login" class="local-login">
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name="user[email]" placeholder="Enter email here">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="user[password]" placeholder="Enter password here">
  </div>
  <button type="submit" class="btn btn-success">Login</button>
</form>
